@import colors
@import prefixes
@import extraIg

.ig
    @import basics
.ig.base
    ul
        list-style-type none
        list-style-image none
        margin 0px
        li
            padding-top 10px
            h2
                font-weight normal
                color #222
                font-size 1.2em
                margin-bottom 10px
            &:first-child
                position relative
                span.month
                    position absolute
                    top 55px
                    text-align center
                    font-size 0.8em
                    color #222
                    &:last-child
                        display none
                svg
                    margin-top 20px
    svg
        shape-rendering crispEdges
        width 925px
        height 148px
        path
            fill none
            stroke #666
            stroke-width 2px
